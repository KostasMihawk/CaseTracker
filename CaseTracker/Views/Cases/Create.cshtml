@section scripts{
    <script>
        $(document).ready(function () {
            $(".datepicker").datepicker()
            $("#isCompleted").click(function () {
                $("#isCompleted").removeClass("btn-danger");
                $("#isCompleted").addClass("btn-success");
                $("#isCompleted").text("Completed");
            });
            $(".quickadd").click(function () {
                $()
            });
            $("#formid").submit(function (event) {
                event.preventDefault();
                var posting = $.post("/api/Attornies", {
                    "FirstName": $("#defaultForm-name").val(),
                    "LastName": $("#defaultForm-surname").val(),
                    "AFM": $("#defaultForm-afm").val(),
                    "City": $("#defaultForm-city").val()
                });

                posting.done(function (data) {
                    alert('success');
                });


            });
            $("#formidCourt").submit(function (event) {
                event.preventDefault();
                var posting = $.post("/api/Courts", { "Name": $("#defaultForm-CourtName").val() });
                posting.done(function (data) {
                    alert('success');
                    $('#modalAddCourt').modal('hide');
                       
                   
                });
            });
        });
    </script>
